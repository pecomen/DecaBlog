@model IEnumerable<DecaBlogMVC.Models.Api.BlogPostVM>

<partial name="_LandingPageNavPartial" />

<div class="container mt-2">
    @if (ViewBag.SuccessMessage != null)
    {
        <script>
            Swal.fire({
                title: 'Success!',
                text: '@ViewBag.SuccessMessage',
                icon: 'success',
                confirmButtonText: 'OK',
                confirmButtonColor: 'rgb(22, 163, 74)'
            });
        </script>
    }
    <div class="flex flex-col items-start justify-start mt-10 md:flex-row md:space-x-10 ">
        <div class="flex flex-col space-y-8">
            @foreach (var post in Model)
            {
                <partial name="Components/_BlogPostEditorItemPartial" model="@post" />
            }
        </div>
    </div>
</div>