@using DecaBlogMVC.Utilities
@model DecaBlogMVC.Models.SearchResultsViewModel

@{
    ViewBag.Title = "Search Results";
}


<partial name="_LandingPageNavPartial"/>

<div class="container">
    <div class="flex mt-10 space-x-8">
        <div class="w-3/4">
            <div class="mt-10">
                <h2 class="text-lg mb-4">Search Results for "@Model.SearchTerm"</h2>
                @if (Model.SearchResults.Any())
                {
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    @foreach (var SearchPost in Model.SearchResults)
                    {
                        <partial name="Components/_SearchPagePartial" model="SearchPost" />
                    }
                 </div>
                }
                    else
                    {

                    <div class="text-center">
                        <p class="text-lg text-gray-500">No results found for "@Model.SearchTerm".</p>
                    </div>
                    }

            </div>
        </div>

        <div class="w-1/4">
            <div class="mb-8">
                <p class="font-semibold">AUTHORS</p>
                <div class="mt-2">
                    @foreach (var topAuthor in Model.Authors)
                    {
                        <partial name="Components/_AuthorListItemPartial" model="@topAuthor"/>
                    }
                </div>
            </div>
            <div class="mb-8">
                <p class="font-semibold mb-2">INTERESTING TOPICS</p>
                @foreach (var tag in Model.Tags)
                {
                    <partial name="Components/_TagComponentPartial" model="@tag"/>
                }
            </div>
            <div>
                <p class="font-semibold">POPULAR</p>
                <div class="mt-2">
                    @foreach (var popularPost in Model.PopularBlogPosts)
                    {
                        <partial name="Components/_BlogPostRecommendationItemPartial" model="@popularPost"/>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
